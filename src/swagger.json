{
  "openapi": "3.0.0",
  "info": {
    "title": "API CRM",
    "version": "1.0.0",
    "description": "Documentação da API para o Backend do CRM. Esta API permite gerenciar administradores e clientes do sistema."
  },
  "paths": {
    "/admin/auth": {
      "post": {
        "tags": ["Auth"],
        "summary": "Autenticar um administrador",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AdminAuth"
              },
              "examples": {
                "example1": {
                  "value": {
                    "taxId": "12345678901",
                    "password": "senhaSegura123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Autenticação bem-sucedida",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AdminResponse"
                }
              }
            }
          },
          "401": {
            "description": "Usuário ou senha incorretos"
          }
        }
      }
    },
    "/admin": {
      "get": {
        "tags": ["Admin"],
        "summary": "Listar todos os administradores",
        "responses": {
          "200": {
            "description": "Lista de administradores recuperada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AdminResponse"
                  }
                },
                "examples": {
                  "example1": {
                    "value": [
                      {
                        "id": 1,
                        "name": "João Silva",
                        "taxId": "12345678901",
                        "createdAt": "2023-01-01T12:00:00Z"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/admin/create": {
      "post": {
        "tags": ["Admin"],
        "summary": "Criar um novo administrador",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AdminCreate"
              },
              "examples": {
                "example1": {
                  "value": {
                    "name": "Maria Oliveira",
                    "taxId": "10987654321",
                    "password": "senhaSegura123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Administrador criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AdminResponse"
                },
                "examples": {
                  "example1": {
                    "value": {
                      "id": 2,
                      "name": "Maria Oliveira",
                      "taxId": "10987654321",
                      "createdAt": "2023-01-02T12:00:00Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Entrada inválida ou CPF já existe"
          }
        }
      }
    },
    "/admin/{id}": {
      "patch": {
        "tags": ["Admin"],
        "summary": "Atualizar um administrador",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AdminUpdate"
              },
              "examples": {
                "example1": {
                  "value": {
                    "name": "João Silva Atualizado",
                    "taxId": "12345678901"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Administrador atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AdminResponse"
                }
              }
            }
          },
          "404": {
            "description": "Administrador não encontrado"
          }
        }
      },
      "delete": {
        "tags": ["Admin"],
        "summary": "Excluir um administrador",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Administrador excluído com sucesso"
          },
          "404": {
            "description": "Administrador não encontrado"
          }
        }
      }
    },
    "/client": {
      "get": {
        "tags": ["Client"],
        "summary": "Listar todos os clientes",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            },
            "description": "Número da página"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            },
            "description": "Quantidade de itens por página"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de clientes recuperada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "clients": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/ClientResponse"
                      }
                    },
                    "totalClients": {
                      "type": "integer",
                      "description": "Total de clientes cadastrados"
                    },
                    "totalPages": {
                      "type": "integer",
                      "description": "Total de páginas disponíveis"
                    },
                    "currentPage": {
                      "type": "integer",
                      "description": "Página atual"
                    }
                  }
                },
                "examples": {
                  "example1": {
                    "value": {
                      "clients": [
                        {
                          "id": 1,
                          "name": "João Cliente",
                          "taxId": "12345678901",
                          "phone": "11999999999",
                          "address": "Rua Exemplo, 123",
                          "createdAt": "2024-01-01T12:00:00Z"
                        }
                      ],
                      "totalClients": 50,
                      "totalPages": 5,
                      "currentPage": 1
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Não autorizado - Token inválido ou ausente"
          }
        }
      }
    },
    "/client/create": {
      "post": {
        "tags": ["Client"],
