  "components": {
    "schemas": {
      "AdminAuth": {
        "type": "object",
        "required": ["taxId", "password"],
        "properties": {
          "taxId": {
            "type": "string",
            "minLength": 11,
            "maxLength": 11,
            "description": "CPF do administrador"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "description": "Senha do administrador"
          }
        }
      },
      "AdminCreate": {
        "type": "object",
        "required": ["name", "taxId", "password"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "description": "Nome do administrador"
          },
          "taxId": {
            "type": "string",
            "minLength": 11,
            "maxLength": 11,
            "description": "CPF do administrador"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "description": "Senha do administrador"
          }
        }
      },
      "AdminUpdate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "description": "Nome do administrador (opcional)"
          },
          "taxId": {
            "type": "string",
            "minLength": 11,
            "maxLength": 11,
            "description": "CPF do administrador (opcional)"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "description": "Senha do administrador (opcional)"
          }
        }
      },
      "AdminResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID do administrador"
          },
          "name": {
            "type": "string",
            "description": "Nome do administrador"
          },
          "taxId": {
            "type": "string",
            "description": "CPF do administrador"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Data de criação do administrador"
          }
        }
      },
      "ClientCreate": {
        "type": "object",
        "required": ["name", "taxId"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "description": "Nome do cliente"
          },
          "taxId": {
            "type": "string",
            "minLength": 11,
            "maxLength": 11,
            "description": "CPF do cliente"
          },
          "phone": {
            "type": "string",
            "description": "Telefone do cliente"
          },
          "address": {
            "type": "string",
            "description": "Endereço do cliente"
          }
        }
      },
      "ClientUpdate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "description": "Nome do cliente (opcional)"
          },
          "taxId": {
            "type": "string",
            "minLength": 11,
            "maxLength": 11,
            "description": "CPF do cliente (opcional)"
          },
          "phone": {
            "type": "string",
            "description": "Telefone do cliente (opcional)"
          },
          "address": {
            "type": "string",
            "description": "Endereço do cliente (opcional)"
          }
        }
      },
      "ClientResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID do cliente"
          },
          "name": {
            "type": "string",
            "description": "Nome do cliente"
          },
          "taxId": {
            "type": "string",
            "description": "CPF do cliente"
          },
          "phone": {
            "type": "string",
            "description": "Telefone do cliente"
          },
          "address": {
            "type": "string",
            "description": "Endereço do cliente"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Data de criação do cliente"
          }
        }
      },
      "ProductCreate": {
        "type": "object",
        "required": ["name", "quantity", "price"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "description": "Nome do produto"
          },
          "description": {
            "type": "string",
            "description": "Descrição do produto"
          },
          "quantity": {
            "type": "integer",
            "minimum": 0,
            "description": "Quantidade em estoque"
          },
          "price": {
            "type": "number",
            "minimum": 0,
            "description": "Preço do produto"
          }
        }
      },
      "ProductUpdate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "description": "Nome do produto (opcional)"
          },
          "description": {
            "type": "string",
            "description": "Descrição do produto (opcional)"
          },
          "quantity": {
